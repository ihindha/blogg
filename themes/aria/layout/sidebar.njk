{% block sidebar %}
<aside class="sidebar" id="sidebar">
  {% if theme.search %}
  <div class="search">
    <div class="form-group">
      <i class="fas fa-search"></i> <input type="text" id="search-input" name="q" results="0" placeholder="{{ __("search") }}" class="form-control"/>
    </div>
  </div>
  <div class="search-result-box" id="search-result"></div>
  {% endif %}
  {% include "author.njk" %}
  {% if config.feed.path %}
  <a class="rss button sidebar-item" href="{{ url_for(config.feed.path) }}"><i class="fas fa-rss"></i> RSS</a>
  {% endif %}
  {% if theme.social %}
  {% include "sociallink.njk" %}
  {% endif %}
  {% if theme.blogroll %}
  {% include "blogroll.njk" %}
  {% endif %}
  {# Keep toc in the bottom because it's sticky! #}
  {% if page.content %}
  {% include "toc.njk" %}
  {% endif %}
</aside>
{% endblock %}
